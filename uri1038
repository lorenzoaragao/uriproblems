values = input().split(' ')
code = int(values[0])
amount = int(values[1])
if code == 1:
    print('Total: R$ {:.2f}' .format(4*amount))
elif code == 2:
    print('Total: R$ {:.2f}' .format(4.5*amount))
elif code == 3:
    print('Total: R$ {:.2f}'.format(5*amount))
elif code == 4:
    print('Total: R$ {:.2f}'.format(2*amount))
elif code == 5:
    print('Total: R$ {:.2f}'.format(1.5*amount))
